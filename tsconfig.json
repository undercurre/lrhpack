{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2016"],
    "module": "commonjs",
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "paths": {
      "*": ["./types/*"]
    },
    "outDir": "dist"
  },
  "include": [
    "resource/*.ts",
    "types/*.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "test/*.ts",
    "test/*.d.ts",
    "lrhpack.config.ts"
  ]
}
